{
    "images": {
        "dmce/log-data": "./log-data",
        "dmce/mysql-data": "./mysql-data",
        "dmce/php": "./php",
        "dmce/nginx": "./nginx"
    },
    "containers": {
        "log-data": {
            "image": "dmce/log-data"
        },
        "mysql-data": {
            "image": "dmce/mysql-data"
        },
        "mysql": {
            "image": "mysql:5.6",
            "port": ["3306"],
            "env": ["MYSQL_ROOT_PASSWORD=-"],
            "mount-from": ["log-data", "mysql-data"]
        },
        "php": {
            "image": "dmce/php",
            "dependencies": ["mysql:mysql"]
        },
        "nginx": {
            "image": "dmce/nginx",
            "port": ["80"],
            "dependencies": ["php:php"],
            "mount-from": ["log-data"]
        }
    },
    "clusters": {
        "dev": ["log-data", "mysql-data","mysql","php","nginx"]
    },
    "groups": {
        "dev": {
            "containers": {
                "mysql": {
                    "port": ["33306:3306"],
                    "env": ["MYSQL_ROOT_PASSWORD=foobar"]
                },
                "php": {
                    "mount": ["./app:/var/app"]
                },
                "nginx": {
                    "port": ["8080:80"],
                    "mount": ["./app:/var/app"]
                }
            }
        }
    }
}